{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1",
    "CLAUDE_DEEP_RESEARCH_DIR": "~/Documents/Obsidian Vault/Deep Research"
  },
  "permissions": {
    "allow": [
      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git diff *)",
      "Bash(git init *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git status *)",
      "Bash(cat *)",
      "Bash(du *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(launchctl list *)",
      "Bash(ls *)",
      "Bash(md5 *)",
      "Bash(mdls *)",
      "Bash(sort *)",
      "Bash(strings *)",
      "Bash(tail *)",
      "Bash(tree *)",
      "Bash(unzip *)",
      "Bash(wc *)",
      "Bash(xxd *)",
      "Bash(nh darwin build *)",
      "Bash(nh darwin switch *)",
      "Bash(nix build *)",
      "Bash(nix develop *)",
      "Bash(nix eval *)",
      "Bash(nix flake *)",
      "Bash(nix path-info *)",
      "Bash(nix-prefetch-github *)",
      "Bash(nix-prefetch-url *)",
      "Bash(nix-build *)",
      "Bash(brew info *)",
      "Bash(brew search *)",
      "Bash(gh api *)",
      "Bash(gh auth status *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh search *)",
      "Bash(npm view *)",
      "Bash(pnpm lint *)",
      "Bash(pnpm list *)",
      "Bash(lsof *)",
      "Bash(open *)",
      "Bash(pbcopy)",
      "Bash(ps *)",
      "Bash(xcodebuild *)",
      "Bash(mkdir -p ~/.claude/research/*)",
      "Bash(cargo build *)",
      "Bash(deno check *)",
      "Bash(deno lint *)",
      "Bash(npx tsc *)",
      "Bash(npx tsx *)",
      "Bash(uv add *)",
      "Bash(uv pip show *)",
      "Bash(uv sync *)",
      "Bash(uv venv *)",
      "Bash(* --help *)",
      "Bash(* --version)",
      "Skill(plugin-dev:*)",
      "Skill(tts:*)",
      "mcp__1mcp__exa_1mcp_get_code_context_exa",
      "mcp__1mcp__exa_1mcp_web_search_advanced_exa",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_batch_scrape",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_check_crawl_status",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_crawl",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_extract",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_map",
      "mcp__1mcp__firecrawl_1mcp_firecrawl_scrape",
      "mcp__1mcp__nixos_1mcp_nix",
      "Read(//nix/store/**)",
      "Read(//tmp/**)",
      "Write(//tmp/**)",
      "Edit(//tmp/**)"
    ],
    "additionalDirectories": [
      "~/.claude",
      "~/Documents/Obsidian Vault"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "WebSearch|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/prefer-mcp-web-tools.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/shellcheck-lint.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-ghostty.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "nix-lsp@malos-plugins": true,
    "json-lsp@malos-plugins": true,
    "tts@malos-plugins": true,
    "pua-unicode@malos-plugins": true,
    "cc-maintenance@malos-plugins": true,
    "homebrew@malos-plugins": true,
    "claude-md-management@claude-plugins-official": true,
    "obsidian@obsidian-skills": true,
    "pyright-lsp@claude-plugins-official": true,
    "haskell-lsp@malos-plugins": true,
    "video-tools@miri-tools": true
  },
  "extraKnownMarketplaces": {
    "miri-tools": {
      "source": {
        "source": "github",
        "repo": "machine-intelligence/claude-code-plugins"
      }
    }
  },
  "skipDangerousModePermissionPrompt": true
}
