{
  "mcpServers": {
    "nixos": {
      "command": "uvx",
      "args": ["mcp-nixos"],
      "restartOnExit": true,
      "maxRestarts": 3
    },
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_advanced_exa,get_code_context_exa&exaApiKey=${EXA_API_KEY}"
    },
    "firecrawl": {
      "type": "http",
      "url": "https://mcp.firecrawl.dev/${FIRECRAWL_API_KEY}/v2/mcp"
    },
    "beeper": {
      "type": "http",
      "url": "http://localhost:23373/v0/mcp"
    },
    "asana": {
      "type": "http",
      "url": "https://mcp.asana.com/mcp"
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "reddit": {
      "command": "npx",
      "args": ["reddit-mcp-server"],
      "env": {
        "REDDIT_AUTH_MODE": "anonymous"
      }
    },
    "gws": {
      "command": "uvx",
      "args": [
        "workspace-mcp",
        "--tools", "gmail", "drive", "docs", "sheets", "calendar", "contacts",
        "--tool-tier", "complete", "--single-user"
      ],
      "restartOnExit": true,
      "maxRestarts": 3,
      "env": {
        "GOOGLE_OAUTH_CLIENT_ID": "${GOOGLE_OAUTH_CLIENT_ID}",
        "GOOGLE_OAUTH_CLIENT_SECRET": "${GOOGLE_OAUTH_CLIENT_SECRET}",
        "GOOGLE_MCP_CREDENTIALS_DIR": "${HOME}/.local/share/google-workspace-mcp",
        "USER_GOOGLE_EMAIL": "${USER_GOOGLE_EMAIL}"
      }
    }
  }
}
